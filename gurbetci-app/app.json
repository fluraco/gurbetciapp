{
  "expo": {
    "name": "Gurbetçi",
    "slug": "gurbetci",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "description": "Yurtdışında yaşayan Türkler için SuperApp",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "scheme": "gurbetci",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.gurbetci.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.gurbetci.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "gurbetci-project"
      }
    },
    "plugins": [
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": false
    }
  }
}
