{
  "name": "gurbetci-news-cron",
  "version": "1.0.0",
  "description": "Gurbetçi uygulaması için otomatik haber çekme ve çeviri sistemi",
  "main": "cron-news-fetcher.js",
  "scripts": {
    "start": "node cron-news-fetcher.js",
    "test": "node cron-news-fetcher.js --run-now",
    "dev": "nodemon cron-news-fetcher.js",
    "pm2:start": "pm2 start cron-news-fetcher.js --name gurbetci-news-cron",
    "pm2:stop": "pm2 stop gurbetci-news-cron",
    "pm2:restart": "pm2 restart gurbetci-news-cron",
    "pm2:delete": "pm2 delete gurbetci-news-cron",
    "pm2:logs": "pm2 logs gurbetci-news-cron"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.5",
    "node-cron": "^3.0.3",
    "node-fetch": "^2.7.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "cron",
    "news",
    "scraping",
    "translation",
    "gemini",
    "supabase",
    "gurbetci"
  ],
  "author": "Gurbetçi Team",
  "license": "MIT"
} 